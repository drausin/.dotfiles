[user]
	name = Drausin Wulsin
	email = daedalus2718@gmail.com
[color]
    diff = auto
    status = auto
    branch = auto
[alias]
    br = branch
    ci = commit
    co = checkout
    df = diff
    last = log -1 HEAD
    me = merge
    pop = stash pop
    st = status -s

    edit-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; vim -p `f`"
    add-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; git add `f`"
    forget = update-index --assume-unchanged
    unforget = update-index --no-assume-unchanged
    l = log --graph --all --date=relative\
        --pretty=format:'%C(cyan)%h%Creset %s %C(green)[%an/%cr]%Creset%C(red)%d%Creset'
    update-all-submodules = submodule foreach git pull origin master

    amend = commit --amend
    squash = commit --amend -C HEAD
    branches = branch -va
    drop-last = reset --soft HEAD^
    remotes = remote -v
    tags = tag -l
    unstage = reset HEAD
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[core]
    editor = vim
	excludesfile = /Users/drausin/.gitignore
[merge]
    tool = vimdiff
    ff = false
[pull]
    default = current
    ff = only
[push]
	default = simple
[rerere]
    enabled = true
[diff]
    algorithm = patience
[credential]
    helper = cache
[branch]
    autosetuprebase = always
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/drausin/.stCommitMsg
